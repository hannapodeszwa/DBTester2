<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>pl.polsl.dbtester.entity.AliasAttributesEntity</class>
        <class>pl.polsl.dbtester.entity.AliasTypesEntity</class>
        <class>pl.polsl.dbtester.entity.AliasesEntity</class>
        <class>pl.polsl.dbtester.entity.DirectorsEntity</class>
        <class>pl.polsl.dbtester.entity.EpisodeBelongsToEntity</class>
        <class>pl.polsl.dbtester.entity.HadRoleEntity</class>
        <class>pl.polsl.dbtester.entity.KnownForEntity</class>
        <class>pl.polsl.dbtester.entity.NameWorkedAsEntity</class>
        <class>pl.polsl.dbtester.entity.NamesEntity</class>
        <class>pl.polsl.dbtester.entity.PrincipalsEntity</class>
        <class>pl.polsl.dbtester.entity.TitleGenresEntity</class>
        <class>pl.polsl.dbtester.entity.TitleRatingsEntity</class>
        <class>pl.polsl.dbtester.entity.TitlesEntity</class>
        <class>pl.polsl.dbtester.entity.WritersEntity</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/imdb"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="mysql"/>
        </properties>
    </persistence-unit>
</persistence>
